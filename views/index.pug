extends layout.pug
block content
  h1 Books
  div
    p 
      a(class='button' href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td.title
            a(href=`/books/${book.id}`)= book.title
          td.author= book.author
          td.genre= book.genre
          td.year= book.year

  script(src='/static/js/scripts.js')